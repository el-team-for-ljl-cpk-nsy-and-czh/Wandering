<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_no_ll">

    <Button
        android:id="@+id/ChooseGame"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/aboutus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/LearnMore"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/learnmore"
        app:layout_constraintBottom_toTopOf="@+id/ReturnInSetting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseGame"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/ReturnInSetting"
        android:layout_width="197dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/DialogueView"
        android:layout_width="524dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.65"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/newest_dialog"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/TextAbout"
        android:layout_width="239dp"
        android:layout_height="137dp"
        android:layout_marginEnd="12dp"
        android:background="@color/colorOfAlert"
        android:text="@string/AboutUs"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/Text"
        app:layout_constraintEnd_toEndOf="@+id/Text"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="230dp"
        android:layout_height="140dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="64dp"
        android:background="@color/colorOfAlert"
        android:text="@string/LearnMoreMessage"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/DialogueView"
        app:layout_constraintTop_toTopOf="@+id/DialogueView" />

    <ImageView
        android:id="@+id/cancelView"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/DialogueView"
        app:layout_constraintTop_toTopOf="@+id/DialogueView"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <Button
        android:id="@+id/cancelInSeting"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/cancelView"
        app:layout_constraintTop_toTopOf="@+id/cancelView" />

</android.support.constraint.ConstraintLayout>