<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_paintstyle">

    <Button
        android:id="@+id/ChooseGame"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/aboutus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/LearnMore"
        android:layout_width="197dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/learnmore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ChooseGame" />

    <Button
        android:id="@+id/ReturnInSetting"
        android:layout_width="197dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LearnMore"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/DialogueView"
        android:layout_width="524dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:alpha="0.65"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/alertdialoguesmall" />

    <TextView
        android:id="@+id/TextAbout"
        android:layout_width="181dp"
        android:layout_height="117dp"
        android:background="@color/colorOfAlert"
        android:text="@string/AboutUs"
        android:textColor="@color/colorOfTextAlert"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/Text"
        app:layout_constraintEnd_toEndOf="@+id/Text" />

    <TextView
        android:id="@+id/Text"
        android:layout_width="181dp"
        android:layout_height="117dp"
        android:layout_marginStart="128dp"
        android:layout_marginTop="80dp"
        android:background="@color/colorOfAlert"
        android:text="@string/LearnMoreMessage"
        android:textColor="@color/colorOfTextAlert"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/DialogueView"
        app:layout_constraintTop_toTopOf="@+id/DialogueView" />

    <ImageView
        android:id="@+id/cancelView"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/DialogueView"
        app:layout_constraintTop_toTopOf="@+id/DialogueView"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <Button
        android:id="@+id/cancelInSeting"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:background="@android:color/transparent"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/cancelView"
        app:layout_constraintTop_toTopOf="@+id/cancelView" />

</android.support.constraint.ConstraintLayout>